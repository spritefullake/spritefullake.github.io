meta(name="viewport", content="width-device-width, initial-scale=1.0")
title Dev-ious
style
    include:cssmin /override.css
body
    header
      h1 Dev-ious
    h5.info Published on #{page.date.toLocaleDateString()} 
    main !{content}
    nav
      ul
        each post in collections.page
          - var linkStyle = post.url == page.url ? "active" : ""
          li(class=linkStyle)
            a(href=post.url)
              =post.data.title
